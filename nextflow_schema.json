{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com///nextflow_schema.json",
    "title": "Antibody preprocessing",
    "description": "Parameters used in the pipeline",
    "type": "object",
    "properties": {
        "read_files": {
            "type": "string",
            "default": "/vast/scratch/users/wang.leo/preprocessing/data/*.fastq",
            "description": "Specify full path of read file(s) location in fastq format"
        },
        "phagemid_ref": {
            "type": "string",
            "default": "/vast/scratch/users/wang.leo/preprocessing/data/reference_files/fab_phagemid.fa",
            "description": "Specify location of the reference genome in fa format",
            "format": "file-path"
        },
        "matchbox_script": {
            "type": "string",
            "default": "/vast/scratch/users/wang.leo/preprocessing/matchbox/antibody_preprocess.mb",
            "description": "Specify location of matchbox script",
            "format": "file-path"
        },
        "output_dir": {
            "type": "string",
            "default": "results",
            "description": "Specify directory for outputs",
            "format": "directory-path"
        }
    },
    "required": [
        "read_files",
        "phagemid_ref",
        "matchbox_script",
        "output_dir"
    ]
}